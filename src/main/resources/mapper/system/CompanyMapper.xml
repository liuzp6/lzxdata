<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzxuni.modules.sys.mapper.CompanyMapper">
	<!-- 根据id查询 -->
	<select id="queryObject" parameterType="java.lang.String" resultType="com.lzxuni.modules.sys.entity.Company">
		select * from sys_company where id=#{id}
	</select>
	<!-- 根据id查询 -->
	<select id="queryListByParentId" parameterType="java.lang.String" resultType="com.lzxuni.modules.sys.entity.Company">
		select * from sys_company where parentId=#{parentId} order by foundedTime  desc
	</select>
	
	<!-- 插入 -->
	<insert id="insert" parameterType="com.lzxuni.modules.sys.entity.Company">
		INSERT INTO sys_company (`id`, `parentId`, `isLeaf`, `level`, `name`, `foundedTime`, `nature`, `manager`, `outerPhone`,
		`email`, `fax`, `address`, `businessScope`, `description`, `createTime`) VALUES (#{id},#{parentId},#{isLeaf},#{level},#{name},
		#{foundedTime},#{nature},#{manager},#{outerPhone},#{email},#{fax},#{address},#{businessScope},#{description},#{createTime})
	</insert>
	<!-- 删除 -->
	<delete id="delete" >
		delete from sys_company where id = #{id} or parentId=#{id}
	</delete>
	<!-- 修改信息 -->
	<update id="update" parameterType="com.lzxuni.modules.sys.entity.Company">
		UPDATE sys_company SET `parentId`=#{parentId}, `isLeaf`=#{isLeaf}, `level`=#{level}, `name`=#{name},
		`foundedTime`=#{foundedTime}, `nature`=#{nature}, `manager`=#{manager}, `outerPhone`=#{outerPhone}, `email`=#{email},
		`fax`=#{fax}, `address`=#{address}, `businessScope`=#{businessScope}, `description`=#{description} WHERE `id`=#{id}
	</update>
</mapper>